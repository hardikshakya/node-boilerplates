{
  "name": "express-typescript",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "build": "tsc",
    "build-check": "tsc --noEmit",
    "dev": "nodemon",
    "start": "tsc && cross-env NODE_ENV=production node dist/index.js",
    "format": "prettier --config .prettierrc.json --write src/**/*.{js,ts,json}",
    "lint": "eslint src/**/*.ts",
    "lint:fx": "eslint src/**/*.ts --fix"
  },
  "author": "Hardik Shakya",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.30",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^5.0.9",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "env-schema": "^2.1.0",
    "express": "^4.17.1",
    "fluent-json-schema": "^2.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.ts": "tsc --noEmit",
    "*.{js,ts,json}": "prettier --config .prettierrc.json --write"
  }
}
